<h3>Show Test(Exam)</h3>

<h4>Title: <%= @exam.exam_name %></h4>
<h5>Subject: <%= @exam.exam_subject %></h5>

<br>
<h4>Questions</h4>
<br>
<% x = 1 %>
<% @exam.questions.each do |q| %>

<%= x %>)<%= q.title %>
<% x += 1%>

<h5>Answers</h5>
<% q.answers.each do |answer| %>
<%= answer.body %>
<br>
<% end %>
<br>

<% end %>

<% @exam.tags.each do |tag| %>
<h4>Tags: <%= tag.tag_title %></h4>
<% end %>
<br>
Params:
<%= params %>