<li class="question_item">
	<fieldset class="mc-question">
	  <%= link_to "X", '#', 
        class: "remove_fields remove-question-block" %>
          
	  <%= f.label :title, "Multiple Choice Question" %><br>
	  <%= f.text_area :title, rows: "3" %><br>
	  <%= f.hidden_field :position, class: "question_position"%>
	  <%= f.hidden_field :_destroy %>

	  <%= f.fields_for :correct_answers do |builder| %>
	  	<%= render 'correct_answer_fields', f: builder %>
	  <% end %>

	  <%= f.fields_for :answers do |builder| %>
	    <%= render 'answer_fields', f: builder %>
	  <% end %>
	  <%= link_to_add_fields "Add Answer", f, :answers %>
	</fieldset>
</li>