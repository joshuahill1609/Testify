<h2>Tests</h2>

<% form_tag exams_path, :method => 'get' do %>
<p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
</p>
<% end %>

<ul>
<% @exams.each do |exam| %>
  <li><a href="exams/<%= exam.id %>">
    Test Name: <%= exam.exam_name %><br>Subject: <%= exam.exam_subject %>,
    Created By: <%= exam.user.username %>, Last Updated: <%= exam.updated_at %>
  </a>
  </li><br>
<% end %>
</ul>