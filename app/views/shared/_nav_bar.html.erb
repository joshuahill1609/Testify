<header>
  <nav class="group">
    <div class="logo">
      <a href="<%= current_user ? user_url(current_user.id) : root_url %>">
        <%= image_tag "testify_logo_small.png"%>
      </a>
    </div>
    <ul class="navigation">
      <% if user_signed_in? %>
        <li><a href="<%= user_url(current_user.id) %>">Me</a></li>
      <% end %>
      <li><a href="<%= exams_url %>">Explore</a></li>
      <li>
      <% if user_signed_in? %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Log In", new_user_session_path %>
      <% end %>
      </li>
    </ul>
	</nav>
</header>