<div class="user-profile-sub-nav group">
  <p><%= link_to "New Test", new_exam_url %></p>
  <ul>
    <li><%= link_to "Edit Profile", edit_user_url(@user)%></li>
  </ul>
</div>

<div class="profile-container group">
  <h1>Hey <%= @user.username.capitalize %>! </h1>

  <p>Your tests</p>
  <ul>
    <% @exams.each do |exam| %>
      <li>
        <a href="/exams/<%= exam.id %>">
        <span><%= exam.exam_name %></span><br>
        <span>Subject: <%= exam.exam_subject %>,</span>
        <span>Created By: <%= exam.user.username %>,</span> 
        <span>Last Updated: <%= exam.updated_at.strftime("%D")
          %></span>
        </a>
      </li><br>
    <% end %>
  </ul>
</div>

<div class="hidden-footer">
</div>